{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/identity/licence/schema.json",
  "title": "Drivers Licence",
  "description": "An individual drivers licence",
  "type": "object",
  "color": "#F8A934",
  "database": {
    "name": "document"
  },
  "allOf": [
    {"$ref": "/schemas/base/schema.json"},
    {
      "properties": {
        "firstName": {
          "title": "First Name",
          "type": "string",
          "minLength": 6,
          "maxLength": 60
        },
        "lastName": {
          "title": "Last Name",
          "type": "string",
          "minLength": 6,
          "maxLength": 60
        },
        "gender": {
          "title": "Gender",
          "type": "string",
          "enum": ["Male", "Female"]
        },
        "licenceNumber": {
          "title": "Licence number",
          "type": "string",
          "minLength": 5,
          "maxLength": 15
        },
        "countryOfIssue": {
          "title": "Country of issue",
          "type": "string",
          "minLength": 2,
          "maxLength": 40
        },
        "localityOfIssue": {
          "title": "Locality of issue",
          "type": "string",
          "minLength": 2,
          "maxLength": 40
        },
        "verifiedBy": {
          "title": "Verified by",
          "type": "string"
        },
        "verifiedAt": {
          "title": "Verified at",
          "type": "string"
        }
      },
      "required": ["firstName", "lastName", "gender", "licenceNumber", "countryOfIssue", "localityOfIssue"]
    }
  ]
}