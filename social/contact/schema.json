    "type": "object",
    "color": "#FD4F64",
    "database": {
        "name": "contact"
    },
    "allOf": [
        {"$ref": "/schemas/base/schema.json"},
        {
            "properties": {
                "firstName": {
                    "title": "First Name",
                    "type": "string"
                },
                "lastName": {
                    "title": "Last Name",
                    "type": "string"
                },
                "email": {
                    "title": "Email",
                    "type": "string",
                    "format": "email"
                },
                "mobile": {
                    "title": "Mobile",
                    "type": "string"
                },
                "did": {
                    "title": "DID",
                    "type": "string"
                }
            },
            "required": ["firstName", "lastName"]
        }
    ]
  }
