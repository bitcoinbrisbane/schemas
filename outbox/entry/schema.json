{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "custom/outbox/item/schema.json",
    "title": "Outbox Entry",
    "description": "Outbox entry",
    "type": "object",
    "database": {
        "name": "outbox_entry"
    },
    "allOf": [
        {"$ref": "/schemas/base/schema.json"},
        {
            "properties": {
                "type": {
                    "title": "Type",
                    "description": "Type of inbox entry",
                    "type": "string",
                    "enum": [
                        "/schemas/base/inbox/type/dataRequest",
                        "/schemas/base/inbox/type/dataSend",
                        "/schemas/base/inbox/type/message",
                        "/schemas/base/inbox/type/permissionRequest"
                    ]
                },
                "data": {
                    "title": "Data",
                    "description": "Data attached to this outbox entry",
                    "type": "object"
                },
                "message": {
                    "title": "Message",
                    "type": "string",
                    "description": "Message to display to the user for this inbox message"
                },
                "sentAt": {
                    "title": "Sent date/time",
                    "type": "string",
                    "format": "date-time"
                },
                "sentTo": {
                    "properties": {
                        "did": {
                            "title": "DID",
                            "type": "string",
                        },
                        "vid": {
                            "title": "VID",
                            "type": "string"
                        },
                        "name": {
                            "title": "Name",
                            "type": "string"
                        }
                    }
                }
            },
            "required": ["message", "sentAt"]
        }
    ]
  }