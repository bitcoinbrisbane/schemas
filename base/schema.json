{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "base/schema.json",
    "title": "Base schema",
    "description": "A base schema",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "description": "Name of the item within card list and details",
            "type": "string"
        },
        "extras": {
            "title": "Extras",
            "description": "Object of extra data not defined in the schema",
            "type": "object"
        },
        "proof": {
            "description": "Object of extra data not defined in the schema",
            "type": "object",
            "properties": {
                "didJwt": {
                    "description": "Signed JWT supplied when this object was created",
                    "type": "object"
                },
                "transaction": {
                    "description": "URI for a blockchain transaction containin a hash of the JWT for independent verification of the data",
                    "type": "string"
                }
            }
        },
        "actions": {
            "description": "Array of actions that can be performed on this data, as specified by a third party",
            "type": "array",
            "properties": {
                "label": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                }
            }
        },
        "archived": {
            "title": "Archived",
            "description": "Is this record archived?",
            "type": "boolean"
        },
        "schema": {
            "title": "Schema",
            "description": "Schema used for this record",
            "type": "string"
        },
        "verification": {
            "description": "Verification details",
            "properties": {
                "verifiedBy": {
                    "type": "string"
                },
                "verifiedAt": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "source": {
            "title": "Source",
            "description": "Where this data was sourced from",
            "type": "string"
        },
        "insertedAt": {
            "title": "Inserted",
            "description": "Date/time this record was inserted",
            "type": "string",
            "format": "date-time"
        },
        "modifiedAt": {
            "title": "Modified",
            "description": "Date/time this record was modified",
            "type": "string",
            "format": "date-time"
        }
    }
}