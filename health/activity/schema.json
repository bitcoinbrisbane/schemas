{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/health/activity/schema.json",
  "title": "Activities",
  "description": "The specific type of the activity item",
  "type": "object",
  "color": "#FD4F64",
  "database": {
    "name": "health_activity"
  },
  "allOf": [
    {"$ref": "/schemas/base/schema.json"},
    {
      "properties": {
        "img": {
          "type": "string",
          "media": {
            "contentEncoding": "base64",
            "contentMediaType": "image/png"
          }
        },
        "name": {
          "title": "Name",
          "type": "string",
          "minLength": 2,
          "maxLength": 60
        },
        "distanceValue": {
          "title": "Distance value",
          "type": "integer",
          "minimum": 0.1,
          "maximum": 10000
        },
        "distanceUnit": {
          "title": "Unit of distance",
          "type": "string",
          "enum": [
            "mi",
            "km",
            "cm",
            "kg"
          ]
        },
        "cal": {
          "title": "Cal",
          "type": "integer"
        },
        "date": {
          "title": "Date",
          "type": "string",
          "format": "date"
        }
      },
      "required": ["name", "distance", "cal", "date"]
    }
  ]
}