{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/health/activity/schema.json",
  "title": "Activities",
  "description": "The specific type of the activity item",
  "type": "object",
  "database": "health_activity",
  "allOf": [
    {"$ref": "/schemas/base/schema.json"},
    {
      "properties": {
        "distance": {
          "$ref":  "/schemas/definitions/unit.json#/measure"
        },
        "img": {
          "type": "string"
        },
        "name": {
          "title": "Name",
          "type": "string",
          "minLength": 2,
          "maxLength": 60
        },
        "cal": {
          "title": "Cal",
          "type": "number"
        },
        "date": {
          "title": "Date",
          "type": "string"
        }
      },
      "required": ["name", "distance", "cal", "date"]
    }
  ]
}