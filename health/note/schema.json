{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "schemas/health/note/schema.json",
    "title": "Health Note",
    "description": "A health note from a medical professional",
    "type": "object",
    "color": "#FD4F64",
    "database": {
      "name": "health_note"
    },
    "allOf": [
      {"$ref": "/schemas/base/schema.json"},
      {
        "properties": {
          "name": {
            "title": "Subject",
            "type": "string",
            "minLength": 2,
            "maxLength": 60
          },
          "notes": {
            "title": "Notes",
            "type": "string"
          },
          "date": {
            "title": "Date",
            "type": "string",
            "format": "date"
          }
        },
        "required": ["name", "notes", "date"]
      }
    ]
  }