{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "schemas/health/prescription/AU/schema.json",
    "title": "Prescription",
    "titlePlural": "Prescriptions",
    "description": "A prescription for medication from a health professional",
    "type": "object",
    "color": "#FD4F64",
    "database": {
      "name": "health_prescription"
    },
    "allOf": [
      {"$ref": "/schemas/base/schema.json"},
      {
        "properties": {
          "name": {
            "title": "Subject",
            "type": "string",
            "minLength": 2,
            "maxLength": 60
          },
          "notes": {
            "title": "Notes",
            "type": "string",
            "inputType": "textarea"
          },
          "medication": {
              "title": "Medication",
              "type": "string"
          },
          "purpose": {
            "title": "Purpose",
            "type": "string"
          },
          "issueDate": {
            "title": "Issue Date",
            "type": "string",
            "format": "date"
          }
        },
        "required": ["name", "notes", "date"]
      }
    ]
  }
