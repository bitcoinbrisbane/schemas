{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/health/measurement/schema.json",
  "title": "Measurement",
  "titlePlural": "Measurements",
  "description": "The specific type of the health item",
  "type": "object",
  "color": "#FD4F64",
  "database": {
    "name": "health_measurement"
  },
  "allOf": [
    {"$ref": "/schemas/base/schema.json"},
    {
      "properties": {
        "img": {
          "type": "string",
          "media": {
            "contentEncoding": "base64",
            "contentMediaType": "image/*"
          }
        },
        "name": {
          "title": "Name",
          "type": "string",
          "minLength": 2,
          "maxLength": 60
        },
        "metricValue": {
          "title": "Metric value",
          "type": "number",
          "minimum": 0.1,
          "maximum": 10000
        },
        "metricUnit": {
          "title": "Unit of metric",
          "type": "string",
          "enum": [
            "mi",
            "km",
            "cm",
            "kg"
          ]
        },
        "dateOfMeasurement": {
          "title": "Date of Measurement",
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "name",
        "dateOfMeasurement"
      ]
    }
  ]
}
