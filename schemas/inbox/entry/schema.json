{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/inbox/entry/schema.json",
    "name": "inbox/entry",
    "title": "Message",
    "description": "Inbox entry for a user",
    "type": "object",
    "database": {
        "name": "inbox_entry",
        "indexes": {
            "sentAt": ["sentAt"]
        }
    },
    "allOf": [
        {"$ref": "/base/schema.json"},
        {
            "properties": {
                "message": {
                    "title": "Message",
                    "type": "string",
                    "description": "Message to display to the user for this inbox message"
                },
                "type": {
                    "title": "Type",
                    "description": "Schema type of the inbox entry",
                    "type": "string"
                },
                "sentAt": {
                    "title": "Sent date/time",
                    "type": "string",
                    "format": "date-time"
                },
                "data": {
                    "title": "Data",
                    "description": "Data attached to this inbox entry",
                    "type": "object"
                },
                "sentBy": {
                    "properties": {
                        "did": {
                            "title": "DID",
                            "type": "string"
                        },
                        "vid": {
                            "title": "VID",
                            "type": "string"
                        },
                        "name": {
                            "title": "Name",
                            "type": "string"
                        }
                    }
                },
                "read": {
                    "type": "boolean"
                }
            },
            "required": ["type", "sentBy"]
        }
    ]
  }