{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/inbox/item/schema.json",
    "name": "inbox/item",
    "title": "Inbox Item",
    "description": "An unprocessed, encrypted inbox item in a users public inbox",
    "type": "object",
    "color": "#FD4F64",
    "database": {
      "name": "inbox_item"
    },
    "properties": {
      "content": {
        "title": "Content",
        "type": "string"
      },
      "key": {
        "title": "Public key",
        "type": "string"
      }
    },
    "required": [
      "content",
      "key"
    ]
  }