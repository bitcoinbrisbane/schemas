{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/inbox/type/datastoreSync/schema.json",
    "title": "Data",
    "name": "inbox/type/datastoreSync",
    "description": "An inbox message requesting the syncronization of data from a source datastore to a destination datastore",
    "type": "object",
    "properties": {
        "schema": {
            "title": "Datastore schema to sync",
            "description": "Name of the database to sync to",
            "type": "string"
        },
        "externalDs": {
            "did": {
                "title": "Destination DID",
                "description": "DID of the database owner",
                "type": "string"
            },
            "appName": {
                "title": "Destination application name",
                "description": "Name of the application to sync to",
                "type": "string"
            },
            "encryptionKey": {
                "$ref": "https://schemas.verida.io/security/key/symmetric/schema.json"
            },
            "dbName": {
                "title": "External database",
                "description": "Specify the database name (if not datastore default)",
                "type": "string"
            }
        },
        "filter": {
            "title": "Filter",
            "description": "Database filter the data must match",
            "type": "object",
            "default": {}
        },
        "direction": {
            "title": "Sync direction",
            "type": "string",
            "enum": ["pull", "push", "both"]
        },
        "status": {
            "title": "Status",
            "type": "string",
            "enum": ["accept", "reject"]
        }
    },
    "required": [
        "schema",
        "externalDs.did",
        "externalDs.appName",
        "externalDs.encryptionKey"
    ]
  }