{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.verida.io/inbox/type/loginRequest/schema.json",
    "title": "Data",
    "name": "inbox/type/login",
    "description": "An inbox message requesting the user login to an application context",
    "type": "object",
    "properties": {
        "sessionId": {
            "title": "Session ID",
            "type": "string"
        },
        "context": {
            "title": "Application context",
            "description": "Application context to unlock",
            "type": "string"
        },
        "authUri": {
            "title": "Auth URI",
            "type": "string"
        },
        "loginDomain": {
            "title": "Login domain",
            "type": "string"
        },
        "expiry": {
            "title": "Expiry",
            "description": "Unix timestamp when this login request expires",
            "type": "integer"
        }
    },
    "required": ["sessionId", "context", "authUri", "loginDomain", "expiry"]
}