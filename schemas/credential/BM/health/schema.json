{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/verida/schemas/blob/master/schemas/credential/BM/health/schema.json",
    "name": "Bermuda",
    "title": "Credential",
    "titlePlural": "Credential Issuer",
    "description": "credential issuer for bermuda ",
    "type": "object",
    "database": {
      "name": "credential_issuer",
      "indexes": {
        "firstName": ["firstName"],
        "lstName": ["lastName"],
        "insertedAt": ["insertedAt"]
      }
    },
    "appearance": {
      "style": {
        "color": "#FF886E",
        "icon": ""
      }
    },
    "layouts": {
      "create": ["firstName", "lastName", "regNumber", "type", "regExpDate"],
      "view": ["firstName", "lastName", "regNumber", "type", "regExpDate"]
    },
    "allOf": [
      { "$ref": "https://schemas.verida.io/base/schema.json" },
      {
        "properties": {
          "firstName": {
            "title": "First Name",
            "type": "string"
          },
          "lastName": {
            "title": "Last Name",
            "type": "string"
          },
          "regNumber": {
            "title": "Registration Number",
            "type": "string"
          },
          "type": {
            "title": "Health professional type",
            "type": "string"
          },
          "regExpDate": {
            "title": "Registration Expiration Date",
            "type": "string"
          }
        },
        "required": [
          "did",
          "firstName",
          "lastName",
          "regNumber",
          "type",
          "regExpDate"
        ]
      }
    ]
  }
  