{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/verida/schemas/blob/feature/mapay-schema/schemas/credential/mapay/schema.json",
    "name": "MAPay Credentials ",
    "title": "MAPay Credentials ",
    "titlePlural": "MAPay Credentials ",
    "description": "MAPay Credentials Issuer",
    "type": "object",
    "database": {
        "name": "credential",
        "indexes": {
            "firstName": ["firstName"],
            "lstName": ["lastName"],
            "insertedAt": ["insertedAt"]
        }
    },
    "appearance": {
        "style": {
            "color": "#FF886E",
            "icon": "./mapay_logo.png"
        }
    },
    "layouts": {
        "create": [
            "did",
            "firstName",
            "lastName",
            "regNumber",
            "healthType",
            "isFavorite"
        ],
        "view": [
            "did",
            "firstName",
            "lastName",
            "regNumber",
            "healthType"
            
        ]
    },
    "allOf": [
        {"$ref": "https://schemas.verida.io/base/schema.json"},
        {"$ref": "https://schemas.verida.io/credential/base/schema.json"},
        {
            "properties": {
                "did": {
                    "title": "Did",
                    "type": "string"
                },
                "firstName": {
                    "title": "First Name",
                    "type": "string"
                },
                "lastName": {
                    "title": "Last Name",
                    "type": "string"
                },
                "regNumber": {
                    "title": "Registration Number",
                    "type": "string"
                },
                "healthType": {
                    "title": "Health professional type",
                    "type": "string"
                },
                "regExpDate": {
                    "title": "Registration Expiration Date",
                    "type": "string",
                    "format": "date",
                    "description": "YYYY-MM-DD"
                }
            },
            "required": ["did", "firstName","lastName","regNumber","healthType","regExpDate"]
        }
    ]
  }