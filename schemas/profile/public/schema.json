{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/profile/public/schema.json",
    "name": "profile/public",
    "title": "Profile",
    "description": "Public profile data for a user",
    "type": "object",
    "database": {
        "name": "profile_public",
        "idFormat": "{{ model.key }}"
    },
    "allOf": [
        {"$ref": "/base/schema.json"},
        {
            "properties": {
                "key": {
                    "title": "Key",
                    "type": "string"
                },
                "value": {
                    "title": "Value",
                    "type": "string"
                }
            },
            "required": ["key"]
        }
    ]
  }